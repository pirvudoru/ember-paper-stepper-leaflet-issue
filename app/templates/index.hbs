{{#leaflet-map lat="51.508530"
               lng="-0.076132"
               zoom=10 as |layers|}}
  {{layers.tile url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
{{/leaflet-map}}

{{#paper-stepper linear=false mobileStepper=true currentStep=currentStep onStepChange=(action (mut currentStep)) as |stepper|}}
  {{#stepper.step label="FooBar" as |step|}}
    {{#step.body}}
      <h1>Hello from step1!</h1>
      <br/>
      {{#leaflet-map lat="51.508530"
                     lng="-0.076132"
                     zoom=10 as |layers|}}
        {{layers.tile url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
      {{/leaflet-map}}
    {{/step.body}}
  {{/stepper.step}}
  {{#stepper.step label="FizzBuzz" as |step|}}
    {{#step.body}}
      <h1>Hello from step2!</h1>
      <br/>
      {{#leaflet-map lat="51.508530"
                     lng="-0.076132"
                     zoom=10 as |layers|}}
        {{layers.tile url="https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png"}}
      {{/leaflet-map}}
    {{/step.body}}
  {{/stepper.step}}
{{/paper-stepper}}
